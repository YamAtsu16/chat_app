<%# チャット画面ヘッダー %>
<div class="chat-header">
  <div class="current-room">
    <%= @room.name %>
  </div>
  <div class="chat-edit">
    <div class="chat-edit-btn">
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>
<%# チャット画面メッセージ %>
<div class="chat-messages">
    <%= render partial: 'message', collection: @messages %>
</div>
<%# チャット画面フォーム %>

<div class="chat-form-wapper">
  <%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'chat-form_text', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'chat-form_send' %>
  <% end %>
</div>


