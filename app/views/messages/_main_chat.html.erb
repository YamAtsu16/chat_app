<%# チャット画面ヘッダー %>
<div class="chat-header">
  <div class="current-room">Room_X</div>
  <div class="chat-edit">
    <div class="chat-edit-btn"><a href="#">チャットを終了する</a></div>
  </div>
</div>
<%# チャット画面メッセージ %>
<div class="chat-messages">
  <div class="chat-message">
    <div class="chat-message_upper">
      <div class="chat-message_name">太郎さん</div>
      <div class="chat-message_date">2022/4/1(Monday) 12:00:00</div>
    </div>
    <div class="chat-message_text">
      はじめまして、太郎と申します。
    </div>
  </div>
    <div class="chat-message">
    <div class="chat-message_user-info">
      <div class="chat-message_name">花子さん</div>
      <div class="chat-message_date">2022/4/1(Monday) 12:00:00</div>
    </div>
    <div class="chat-message_text">
      はじめまして、花子と申します。
    </div>
  </div>
</div>
<%# チャット画面フォーム %>
<div class="chat-form-wapper">
  <%= form_with model: [@room, @message], class: "chat-form", local: true do |f| %>
    <%= f.text_field :content, placeholder: "type a message", class: "chat-form_text" %>
    <label class="form-image">画像
      <%= f.text_field :image, class: "hidden" %>
    </label>
    <%= f.submit "送信", class: "chat-form_send" %>
  <% end %>
</div>